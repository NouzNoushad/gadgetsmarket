 <div class="row mt-5">
     <div class="col-md-4 m-auto">
         <div class="card card-body">
             <h5 class="text-center mt-4">LOGIN</h5>
             <form action="/products/login " method="POST" >

                <%- include('./partials/errors.ejs') %> 
                <div class="mb-3 row mt-4 justify-content-center">
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                    </div>
                </div>
                <div class="mb-5 row justify-content-center">
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                    </div>
                </div>
                <div class="mb-5 ms-4">
                    <button type="submit" class="btn btn-primary col-sm-11 mb-3">Log In</button>
                    <p class="lead">Don't Have an Account?<a href="/products/register" >Sign In</a></p>
                </div>
            </form>
         </div>
     </div>
 </div> 