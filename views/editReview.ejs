 <div class="row mt-5">
     <div class="col-md-6 m-auto">
         <div class="card card-body">
             <h3 class="text-center"><%= product.name %> </h3>
             <form action="/products/editReview/<%= customer.id %> " method="POST" >
                <div class="mb-3 row mt-4 justify-content-center">
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="username" name="username" placeholder="Username" value="<%= customer.username %> ">
                    </div>
                </div>
                <div class="mb-3 row justify-content-center">
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="rating" name="rating" placeholder="Rating [1 - 5]" value="<%= customer.rating %> ">
                    </div>
                </div>
                <div class="mb-3 row justify-content-center">
                    <div class="col-sm-10">
                        <textarea class="form-control" id="message" name="message" placeholder="Write your message..." ><%= customer.message %></textarea>
                    </div>
                </div>
                <div class="ps-5 mb-4">
                    <button type="submit" class="btn btn-primary col-sm-11">Submit</button>
                    <a href="/products/details/<%= product.id %> " class="btn btn-secondary col-sm-11 mt-2">Cancel</a>
                    <p class="mt-3">Or delete review?<a href="/products/deleteReview/<%= customer.id %> " class="ps-1" style="color:red">Delete</a></p>
                </div>
            </form>
         </div>
     </div>
 </div> 
  
